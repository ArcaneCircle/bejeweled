{
  "name": "dejeweled",
  "version": "1.1.2",
  "private": true,
  "packageManager": "pnpm@7.3.0",
  "scripts": {
    "build": "npm run versions && npm run git && vite build && jszip-cli -c jszip.config.json",
    "versions": "npm version patch && rr 'name = .+' '\"name = Dejeweled v\" + r(\"package\").version' -j manifest.toml && rr 'name = (.+)' 'name = \"$1\"' manifest.toml",
    "git": "git add manifest.toml && git commit -m 'update game version'",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "dev": "vite --port 3333",
    "webxdc-dev": "webxdc-dev run http://localhost:3333/",
    "webxdc-xdc": "webxdc-dev run dist/package.xdc",
    "old-dev": "concurrently \"pnpm webxdc-dev\" \"pnpm dev\""
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.23.1",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@types/node": "^17.0.45",
    "concurrently": "^7.2.2",
    "eruda": "^2.4.1",
    "eslint": "^8.18.0",
    "jsdom": "^19.0.0",
    "rexreplace": "^7.0.7",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.12.10",
    "webxdc-dev": "^0.15.1"
  },
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "webxdc.js",
    "webxdc.d.ts"
  ]
}
